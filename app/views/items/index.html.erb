<h1>アイテム一覧</h1>

<div class="row">
	<div class="col-12">
		<div class="row">
        <!-- 検索フォーム -->
        <form>
            <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
                <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/>
                </div>
            </div>
        </form>
			<% if @items.present? %>
				<%= render @items %>
			<% else %>
				<p>アイテムがありません。</p>
			<% end %>
		</div>
	</div>
</div>
